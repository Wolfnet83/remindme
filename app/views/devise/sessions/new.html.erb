<% content_for :side do %>
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-horizontal") do |f| %>
  <div>
    <%= f.email_field :email, :placeholder => "email" %></div>

  <div>
    <%= f.password_field :password, :placeholder => "password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div> 
      <label class="checkbox">
      <%= f.check_box :remember_me %>
      <%= t "Remember me" %>
    </label>
    </div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
<% end %>
<%= render "devise/shared/links" %>
<% end %>
