.col-md-3.col-md-offset-4
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    %h2= t('common.sign_up')
    .form-group{class: ("has-errors has-feedback" if resource.errors[:username].present?)}
      .col-lg-12
        = f.input_field :username, autofocus: true, placeholder: t('common.username')
        = f.error :username
        - if resource.errors[:username].present?
          %span.glyphicon.glyphicon-remove.form-control-feedback
            
    .form-group{class: ("has-errors has-feedback" if resource.errors[:email].present?)}
      .col-lg-12
        = f.input_field :email, placeholder: t('auth_forms.email')

    .form-group{class: ("has-errors has-feedback" if resource.errors[:password].present?)}
      - if f.object.password_required?
        .col-lg-12
          = f.input_field :password, placeholder: t('auth_forms.password')
    .form-group{class: ("has-errors has-feedback" if resource.errors[:password_confirmation].present?)}
      .col-lg-12
        = f.input_field :password_confirmation, placeholder: t('auth_forms.password_confirmation')
    = f.button :submit, t('common.sign_up'), class: "btn btn-primary btn-block"
  = render "devise/shared/links"
