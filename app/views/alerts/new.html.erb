<%= simple_form_for :alert, :url => { :action => :create } do |f| %>
  <%= f.input :event, :label => 'sder',:hint => 'Name of event' %>
  <%= f.input :event_description, :as => 'text' %>
  <%= f.input :period %>
  <%= f.input :start_time, :as => :date, :order => [ :day, :month, :year] %>
  <%= f.button :submit %>
<% end %>
