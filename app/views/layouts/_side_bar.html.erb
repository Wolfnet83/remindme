<% if !user_signed_in? %>
  <%= form_for("user", :url => user_session_path) do |f| %>
    <div>
      <%= f.email_field :email, :placeholder => "email" %></div>
    <div>
      <%= f.password_field :password, :placeholder => "password" %></div>
    <div> 
      <label class="checkbox">
        <%= f.check_box :remember_me %>
        <%= t "Remember me" %>
      </label>
    </div>
    <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
  <% end %>
  <%=link_to t("Register"), new_user_registration_path %>
  <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "btn btn-primary" %>
<% else %>
  <%= render 'devise/menu/registration_items' %>
  <%= render 'devise/menu/login_items'%>
  <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
<% end %>
